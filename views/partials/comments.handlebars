
<div class="comments">
  {{#each this}}
    <div class="card">
        <h5 class="card-header">Comment:</h5>

        <section class="comment card-body">
          
            <div>
                {{comment_text}}
            </div>
            
            <div>
                -{{user.username}}, {{format_date created_at}}
            </div>
            
        </section>
    </div>
  {{/each}}
</div>