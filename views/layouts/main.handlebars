                    {{else}}
                    <button class="btn"><a class="link" href="/login">Login</a></button>
                    {{/if}}
                </nav>          
          </div>
          <h1>Tech Blog</h1>
      </header>

    <main>
      {{{ body }}}
    </main>

  </div>

    {{#if loggedIn}}
    <script src="/javascript/logout.js"></script>
    {{/if}}

</body>

</html>